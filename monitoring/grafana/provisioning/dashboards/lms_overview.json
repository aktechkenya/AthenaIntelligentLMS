{
  "__inputs": [],
  "__requires": [],
  "annotations": {
    "list": []
  },
  "description": "AthenaLMS â€” Service health, JVM metrics, HTTP rates, and RabbitMQ queue depth",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "id": 100,
      "title": "HTTP Traffic",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "reqps"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "id": 1,
      "options": {
        "legend": {"calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_server_requests_seconds_count{job=~\"lms-.*\"}[5m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "title": "HTTP Request Rate by Service",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "percentunit",
          "max": 1,
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "id": 2,
      "targets": [
        {
          "expr": "sum by (service) (rate(http_server_requests_seconds_count{status=~\"5..\",job=~\"lms-.*\"}[5m])) / sum by (service) (rate(http_server_requests_seconds_count{job=~\"lms-.*\"}[5m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "title": "5xx Error Rate by Service",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
      "id": 101,
      "title": "JVM Health",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "bytes"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 10},
      "id": 3,
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\",job=~\"lms-.*\"}",
          "legendFormat": "{{service}} heap used",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\",job=~\"lms-.*\"}",
          "legendFormat": "{{service}} heap max",
          "refId": "B"
        }
      ],
      "title": "JVM Heap Usage",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 10},
      "id": 4,
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=~\"lms-.*\"}[5m]) / rate(jvm_gc_pause_seconds_count{job=~\"lms-.*\"}[5m])",
          "legendFormat": "{{service}} avg GC pause",
          "refId": "A"
        }
      ],
      "title": "JVM GC Pause (avg)",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 10},
      "id": 5,
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=~\"lms-.*\"}",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "title": "JVM Thread Count",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
      "id": 102,
      "title": "Service Status",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "DOWN"},"1": {"text": "UP"}}, "type": "value"}
          ]
        },
        "overrides": []
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 19},
      "id": 6,
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"]},
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      },
      "targets": [
        {
          "expr": "up{job=~\"lms-.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "LMS Services Up/Down",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 25},
      "id": 103,
      "title": "RabbitMQ",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
      "id": 7,
      "targets": [
        {
          "expr": "rabbitmq_queue_messages{queue=~\"lms.*\"}",
          "legendFormat": "{{queue}}",
          "refId": "A"
        }
      ],
      "title": "LMS RabbitMQ Queue Depth",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "reqps"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
      "id": 8,
      "targets": [
        {
          "expr": "rate(rabbitmq_queue_messages_published_total{queue=~\"lms.*\"}[5m])",
          "legendFormat": "{{queue}} publish rate",
          "refId": "A"
        }
      ],
      "title": "LMS Queue Publish Rate",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
